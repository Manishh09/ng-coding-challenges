{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc/lib",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "lib": ["dom", "es2022"],
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "compilationMode": "partial"
  },

  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "**/*.ts"
  ],
  "references": [
    { "path": "../models" }
  ]
}

